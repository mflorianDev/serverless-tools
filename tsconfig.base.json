{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@overlap/serverless-tools-api": ["packages/api/src/index.ts"],
      "@overlap/serverless-tools-cognito": ["packages/cognito/src/index.ts"],
      "@overlap/serverless-tools-dynamo": ["packages/dynamo/src/index.ts"],
      "@overlap/serverless-tools-event-bridge": [
        "packages/event-bridge/src/index.ts"
      ],
      "@overlap/serverless-tools-mongo": ["packages/mongo/src/index.ts"],
      "@overlap/serverless-tools-rds-data": ["packages/rds-data/src/index.ts"],
      "@overlap/serverless-tools-s3": ["packages/s3/src/index.ts"],
      "@overlap/serverless-tools-ses": ["packages/ses/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
